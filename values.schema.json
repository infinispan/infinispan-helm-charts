                            "value": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "key",
                            "value"
                        ]
                    },
                    "type": [
                        "array",
                        "null"
                    ]
                },
                "svcLabels": {
                    "description": "Adds labels to every service created",
                    "items": {
                        "properties": {
                            "key": {
                                "type": "string"
                            },
                            "value": {
                                "type": "string"
                            }
                        },
                        "required": [
                            "key",
                            "value"
                        ]
                    },
                    "type": [
                        "array",
                        "null"
                    ]
                },
                "resourceLabels": {
