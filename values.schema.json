                            "items": {
                                "properties": {
                                    "category": {
                                        "description": "Specifies the FQN of a Infinispan package for which you want to configure logging.",
                                        "type": "string"
                                    },
                                    "level": {
                                        "description": "Specifies the level at which Infinispan logs messages for this package.",
                                        "default": "info",
                                        "enum": [
                                            "trace",
                                            "debug",
                                            "info",
                                            "warn",
                                            "error"
                                        ],
                                        "type": "string"
                                    }
                                },
                                "required": [
                                    "category",
                                    "level"
                                ]
                            },
                            "title": "Category",
                            "type": [
                                "array",
                                "null"
                            ]
                        }
                    }
                },
                "podLabels": {
                    "description": "Adds labels to every pod created",
                    "items": {
                        "properties": {
                            "key": {
                                "type": "string"
