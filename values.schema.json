                                "type": "string"
                            },
                            "operator": {
                                "type": "string"
                            },
                            "tolerationSeconds": {
                                "type": "integer",
                                "format": "int64"
                            },
                            "value": {
                                "type": "string"
                            }
                        }
                    },
                    "type": [
                        "array",
                        "null"
                    ]
                }
            },
            "type": [
                "object",
                "null"
            ]
        }
